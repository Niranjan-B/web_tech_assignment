<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ninja.webtech.activities.ResultsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_activity_results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="5dp"
        android:fitsSystemWindows="true"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_activity_results"
        android:orientation="vertical">

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_layout_activity_results"
            style="@style/customTabLayout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@android:color/background_light"
            android:elevation="5dp"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager_activity_results"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"/>

    </LinearLayout>

</RelativeLayout>
