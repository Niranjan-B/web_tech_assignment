<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_row_background"
                android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/image_view_custom_row_posts"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_margin="8dp"
        android:scaleType="fitXY"
        tools:src="@drawable/ic_star_black_24dp"/>

    <TextView
        android:id="@+id/text_view_name_custom_row_posts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/image_view_custom_row_posts"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="SpaceX"/>

    <TextView
        android:id="@+id/text_view_date_custom_row_posts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/text_view_name_custom_row_posts"
        android:layout_below="@+id/text_view_name_custom_row_posts"
        android:textColor="#000000"
        android:textSize="12sp"
        android:textStyle="bold"
        tools:text="2017-03-19T16 16:37+0000"/>

    <TextView
        android:id="@+id/text_view_message_custom_row_posts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/text_view_date_custom_row_posts"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@+id/image_view_custom_row_posts"
        tools:text="Lorem ipsum generator"/>


</RelativeLayout>