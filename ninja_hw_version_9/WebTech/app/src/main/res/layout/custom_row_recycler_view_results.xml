<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/custom_row_background">


    <ImageView
        android:id="@+id/image_view_custom_row"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        app:srcCompat="@color/colorPrimary"/>

    <TextView
        android:id="@+id/text_view_custom_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_view_custom_row"
        android:layout_alignTop="@+id/image_view_custom_row"
        android:layout_marginLeft="8dp"
        android:layout_toEndOf="@id/image_view_custom_row"
        android:layout_toStartOf="@+id/image_view_star_custom_row"
        android:maxLines="2"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="Hello world"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        app:srcCompat="@drawable/ic_expand_more_black_24dp"/>

    <ImageView
        android:id="@+id/image_view_star_custom_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@+id/imageView2"
        app:srcCompat="@drawable/ic_star_border_black_24dp"/>


</RelativeLayout>